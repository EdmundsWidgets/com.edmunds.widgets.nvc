<form action="/download" method="post" id="widget-configurator" class="well well-small">
    <fieldset>
        <legend>Get NVC Widget Code</legend>

        <!-- vehicle api key -->
        <div class="control-group">
            <div class="control-label">
                API Key
                (<a href="http://edmunds.mashery.com/member/my-account" target="_blank">get yours</a>)
                <div class="question"><i class="icon-question-sign"></i>
                    <div class="tooltip right tooltip-question">
                        <div class="tooltip-arrow" style=""></div>
                        <div class="tooltip-inner">The API Key listed at <a href="http://edmunds.mashery.com/member/my-account" target="_blank">http://edmunds.mashery.com/member/my-account</a></div>
                    </div>
                </div>
                <sup class="label label-important label-required">required</sup>
            </div>
            <div class="controls">
                <div class="control-apikey" id="apiKeyControl">
                    <div class="input-append apikey-change">
                        <input type="text">
                        <button class="btn disabled" type="button" data-action="apply">Apply</button>
                    </div>
                    <div class="apikey-entered hide">
                        <button class="btn btn-link" type="button" data-action="change">Change</button>
                        <span></span>
                    </div>
                </div>
            </div>
        </div><!--/vehicle api key -->

        <div class="control-group">
            <div class="control-label">Theme</div>
            <div class="controls" id="option_theme">
                <div class="btn-group" data-toggle="buttons-radio">
                    <button type="button" class="btn btn-small" data-value="simple">Theme 1</button>
                    <button type="button" class="btn btn-small" data-value="green">Theme 2</button>
                    <button type="button" class="btn btn-small" data-value="red">Theme 3</button>
                </div>
                <input type="hidden" name="widgetOptions[hasLogoInHeader]" value="true">
            </div>
        </div>

        <div class="control-group">
            <div class="control-label">Color Scheme</div>
            <div class="controls" id="option_colorscheme">
                <div class="btn-group" data-toggle="buttons-radio">
                    <button type="button" class="btn btn-small" data-value="light">Light</button>
                    <button type="button" class="btn btn-small" data-value="dark">Dark</button>
                </div>
            </div>
        </div>

        <div class="control-group hide">
            <div class="control-label">Layout</div>
            <div class="controls" id="option_layout">
                <div class="btn-group" data-toggle="buttons-radio">
                    <button type="button" class="btn btn-small active" data-value="vertical">Vertical</button>
                    <button type="button" class="btn btn-small" data-value="horizontal">Horizontal</button>
                </div>
            </div>
        </div>

        <div class="control-group">
            <div class="control-label">Width</div>
            <div class="controls slider-control">
                <div id="widget-width-slider"></div>
                <input id="widget-width-value" type="hidden" name="variables[horizontalWidth]" value="680px">
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <label class="checkbox">
                    <input type="checkbox" id="option_border" checked="checked">
                    Include Border
                </label>
                <input type="hidden" name="variables[borderWidth]" value="1px">
            </div>
        </div>

        <div class="control-group">
            <div class="control-label">Border Radius</div>
            <div class="controls slider-control">
                <div id="border-radius-slider"></div>
                <input id="border-radius-value" type="hidden" name="variables[borderRadius]" value="5px">
            </div>
        </div>

        <div class="control-group hide">
            <div class="control-label">Edmunds copy</div>
            <div class="controls">
                <select id="copy" name="widgetOptions[copy]" disabled="disabled">
                    <option value="logo_text">Logo and text</option>
                    <option value="logo">Edmunds logo</option>
                    <option value="text">Text message</option>
                </select>
            </div>
        </div>

        <div class="control-group" id="tab_configurator">
            <div class="control-label">Tabs to display</div>
            <div class="controls tab-control">
                <select id="tab_select">
                    <option value="All" selected>All Tabs</option>
                    <option value="Tab1+Tab2">Tab 1 + Tab 2</option>
                    <option value="Tab1+Tab3">Tab 1 + Tab 3</option>
                </select>
                <div class="control-line">
                    <label>Tab 1 Name</label><input type="text" id="tab1_name" name="tab1_name" maxlength="50" />
                </div>
                <div class="control-line">
                    <label>Tab 2 Name</label><input type="text" id="tab2_name" name="tab2_name" maxlength="50" />
                </div>
                <div class="control-line">
                    <label>Tab 3 Name</label><input type="text" id="tab3_name" name="tab3_name" maxlength="50" />
                </div>
            </div>
        </div>

        <div class="control-group" id="option_makes">
            <div class="control-label clearfix">
                <span class="pull-left">Included Makes</span>
                <label class="checkbox btn btn-small pull-right">
                    <input type="checkbox" id="selectAllMakes">
                    Select&nbsp;All
                </label>
            </div>
            <div class="controls">
                <ul id="includedMakes"></ul>
                <input type="hidden" name="widgetOptions[includedMakes]" value="">
            </div>
        </div>

        <div class="control-group hide">
            <div class="control-label">Show vehicles</div>
            <div class="controls" id="option_vehicles">
                <div class="btn-group" data-toggle="buttons-radio">
                    <button type="button" class="btn btn-small active" data-value="ALL">All</button>
                    <button type="button" class="btn btn-small" data-value="NEW">NEW</button>
                    <button type="button" class="btn btn-small" data-value="USED">USED</button>
                </div>
            </div>
        </div>

        <div class="control-group">
            <div class="control-label">Default Zip Code <sup class="label label-important label-required">required</sup></div>
            <div class="controls">
                <div class="input">
                    <input type="text" autocomplete="off" name="widgetOptions[zip]" value="" id="option_zipcode" class="input-small" maxlength="5" disabled="disabled">
                </div>
            </div>
        </div>

        <div class="control-group hide">
            <div class="control-label">Price to display</div>
            <div class="controls">
                <select id="option_price" name="widgetOptions[price]">
                    <option value="tmv_invoice_msrp" data-used-text="TradeIn, PrivateParty and Dealer Retail" data-new-text="Invoice, TMV and MSRP">Invoice, TMV and MSRP</option>
                    <option value="tmv_invoice" data-used-text="TradeIn and Dealer Retail" data-new-text="Invoice and TMV">Invoice and TMV</option>
                    <option value="tmv" data-used-text="Dealer Retail only" data-new-text="TMV only">TMV only</option>
                </select>
            </div>
        </div>

        <div class="control-group">
            <div class="control-label">Dealer keywords</div>
            <div class="controls">
                <div class="input-append">
                    <input type="text" id="dealer_keyword" maxlength="100">
                    <button class="btn" type="button" disabled="disabled">Add</button>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary" id="widget-get"><i class="icon-white icon-download"></i>&nbsp;Get Code</button>
            <button type="reset" class="btn btn-link">Reset</button>
        </div>

        <input type="hidden" name="variables[widthHorizontals]" value="680px">

    </fieldset>
</form><!--./widget-configurator -->
